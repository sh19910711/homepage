      #contents
        &
          background: #fff
          box-shadow: 0px 0px 6px 1px rgba(0,0,0,0.02)
          border-bottom: 1px solid rgba(0, 0, 0, 0.1)
          padding: 32px
          border: 1px solid rgba(0, 0, 0, 0.05)
          margin-bottom: 32px
        .subject
          font-size: 42px
          box-shadow: rgba(0, 0, 0, 0.01) 0px 3px 3px 0px
          margin-bottom: 24px
          padding: 6px
          width: 100%

     #footer
       &
